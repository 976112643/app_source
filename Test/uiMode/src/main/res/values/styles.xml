<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!-- app默认主题,无标题,文字颜色默认text2的颜色,提示文字默认颜色为text5,默认字体大小为14sp -->
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowFullscreen">true</item> -->
        <item name="android:textColor">@color/text2</item>
        <item name="android:textSize">@dimen/textsize_default</item>
        <item name="android:textColorHint">@color/text5</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="SplashActivityStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <style name="editText_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingTop">@dimen/lab_top_left_buttom_padding</item>
        <item name="android:paddingBottom">@dimen/lab_top_left_buttom_padding</item>
    </style>

    <style name="lucency_Act" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lucency</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <!-- 全透明背景对话框样式 -->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/lucency</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 半透明,无标题,浮动属性的对话框 -->
    <style name="dialog">
        <item name="android:windowBackground">@color/lucency_black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <!-- 半透明,无标题,浮动属性的对话框 -->
    <style name="pinlun_dialog">
        <item name="android:windowBackground">@color/lucency_black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <!-- 窗口默认动画 -->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_dimiss</item>
    </style>
    <!-- 窗口底部进入动画 -->
    <style name="bottomInWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
    <!-- 默认的提交按钮样式 -->
    <style name="submitBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/login_btn_selec</item>
        <item name="android:paddingLeft">@dimen/lay_left_right_padding</item>
        <item name="android:paddingRight">@dimen/lay_left_right_padding</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="submitBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/sel_submit_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="submitBtn_y">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/sel_submit_y_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fasongBtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/charoom_fasong_</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 文字1-6基本色样式 -->

    <style name="textStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text1</item>
    </style>

    <style name="textStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text2</item>
    </style>

    <style name="textStyle3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text3</item>
    </style>

    <style name="textStyle4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text4</item>
    </style>

    <style name="textStyle5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text5</item>
    </style>
    <!-- 默认水平分割线样式 -->
    <style name="limit_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/limit_line1</item>
    </style>

    <style name="limit_line_shad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/limit_line_shade</item>
    </style>

    <style name="limit_linetm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10px</item>
        <item name="android:background">@color/danhuise</item>
    </style>

    <style name="limit_linebg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/bg</item>
    </style>

    <style name="bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5px</item>
        <item name="android:background">@color/limit_line1</item>
    </style>

    <style name="center_gully">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <!-- <item name="android:background">@color/default_bg</item> -->
    </style>

    <!-- 垂直分割线 -->
    <style name="vertical_limit_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/limit_line1</item>
    </style>

    <style name="vertical_limit_linetm">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">10px</item>
        <item name="android:background">@color/danhuise</item>
    </style>

    <style name="limit_linetm2">
        <item name="android:layout_height">20px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg</item>
    </style>
    <!-- 登录界面水平分割线 -->
    <style name="login_lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5px</item>
        <item name="android:background">@color/limit_line1 </item>
    </style>
    <!-- 登录界面竖直分割线 -->
    <style name="login_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">@dimen/view_gap2</item>
        <item name="android:layout_marginRight">@dimen/view_gap2</item>
        <item name="android:background">@color/limit_line1</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">@dimen/titlebar_textSize</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:textColor">@drawable/select_indicator_color_</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/select_indicator_color_</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>